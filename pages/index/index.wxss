/**index.wxss**/
.slide-image {
  width: 100%;
  height: 100%
}

.tabs {
  height: 80rpx;
  line-height: 70rpx;
}

.scroll-view_H{
  height: 80rpx;
  line-height: 100rpx;
  white-space: nowrap;
  background: #ffffff;
}

.scroll-view-item_H{
  margin-left: 40rpx;
  display: inline-block;
  font-size: 28rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.active {
  color: cornflowerblue;
  height: 95%;
  border-bottom:1px solid cornflowerblue;
}

.userList {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f7f8fd;
}

.box {
  width: 680rpx;
  padding-bottom: 20rpx;
}

.userInfo {
  margin: 20rpx 10rpx 0 10rpx;
  width: 320rpx;
  height: 388rpx;
  background: #ffffff;
  display: inline-block;
}

.userPic {
  height: 320rpx
}

.userData {
  height: 68rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user_name {
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #666666;
  line-height: 68rpx;
  margin-left: 20rpx; 
}

.user_score {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #7ac9fc;
  line-height: 68rpx;
  margin-left: 10rpx; 
}

.user_like_pic {
  width: 24rpx;
  height: 24rpx;
  margin-left: auto; 
  margin-right: 10rpx; 
}

.user_like {
  font-family: PingFangSC;
  font-size: 22rpx;
  color: #999999;
  line-height: 68rpx;
  margin-right: 20rpx; 
}

.bottom_nav {
  height: 98rpx;
  position: fixed;
  bottom: 0;
  background: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.bottom_nav_left {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 98rpx;
  border-right: 1rpx solid #f7f8fd;
  box-sizing: border-box;
  align-items: center;
  padding-top: 20rpx;
}

.bottom_nav_right {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 98rpx;
  box-sizing: border-box;
  align-items: center;
  padding-top: 20rpx;
}

.bottom_nav_left_pic {
  height: 40rpx;
  width: 40rpx;
}

.bottom_nav_left_font {
  height: 30rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #7ac9fc;
}

.bottom_nav_right_pic {
  height: 40rpx;
  width: 40rpx;
}

.bottom_nav_right_font {
  height: 30rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #7ac9fc;
}

.nav_img {
  width: 100%;
  height: 100%;
}